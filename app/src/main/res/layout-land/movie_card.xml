<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/card_margin_land_vertical"
        android:layout_marginLeft="@dimen/card_margin_land_horizontal"
        android:layout_marginRight="@dimen/card_margin_land_horizontal"
        android:layout_marginTop="@dimen/card_margin_land_vertical"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12">

            <ImageView
                android:id="@+id/movie_land_thumbnail"
                android:layout_width="0dp"
                android:layout_height="@dimen/movie_cover_land_height"
                android:layout_weight="5"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/thumbnail_content_desc"
                android:focusable="true"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/movie_cover_land_height"
                android:layout_weight="7"
                android:background="@color/movie_title_background"
                android:orientation="vertical">

                <!-- Title (land) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_land_title_text_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_land_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_land_vertical_margin"
                    android:text="@string/detail_title"
                    android:textColor="@color/land_movie_desc"
                    android:textSize="@dimen/main_land_title_text_size" />

                <TextView
                    android:id="@+id/tv_main_land_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_land_text_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_land_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_land_vertical_margin"
                    android:textColor="@color/land_movie_title"
                    android:textSize="@dimen/main_land_text_size"
                    android:textStyle="bold" />
                <!-- Title (land) -->

                <!-- Genres (land) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_land_title_text_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_land_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_land_vertical_margin"
                    android:text="@string/detail_genres"
                    android:textColor="@color/land_movie_desc"
                    android:textSize="@dimen/main_land_title_text_size" />

                <TextView
                    android:id="@+id/tv_main_land_genre"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_land_text_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_land_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_land_vertical_margin"
                    android:textColor="@color/land_movie_title"
                    android:textSize="@dimen/main_land_text_size"
                    android:textStyle="bold" />
                <!-- Genres (land) -->

                <!-- Release Date (land) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_land_title_text_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_land_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_land_vertical_margin"
                    android:text="@string/detail_release_date"
                    android:textColor="@color/land_movie_desc"
                    android:textSize="@dimen/main_land_title_text_size" />

                <TextView
                    android:id="@+id/tv_main_land_release_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_land_text_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_land_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_land_vertical_margin"
                    android:textColor="@color/land_movie_title"
                    android:textSize="@dimen/main_land_text_size"
                    android:textStyle="bold" />
                <!-- Release Date (land) -->

                <!-- Vote Average (land) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_land_title_text_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_land_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_land_vertical_margin"
                    android:text="@string/detail_vote"
                    android:textColor="@color/land_movie_desc"
                    android:textSize="@dimen/main_land_title_text_size" />

                <TextView
                    android:id="@+id/tv_main_land_vote"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_land_text_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_land_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_land_vertical_margin"
                    android:textColor="@color/land_movie_title"
                    android:textSize="@dimen/main_land_text_size"
                    android:textStyle="bold" />
                <!-- Vote Average (land) -->

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>